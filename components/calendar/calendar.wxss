/* components/calendar/calendar.wxss */
.calendar {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  background: var(--commonBlack);
  padding-bottom: 20rpx;
}

/* 标题 */
.calendar-title {
  text-align: left;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 20rpx 20rpx;
}

.calendar-title .title {
  width: 400rpx;
  text-align: center;
  color: white;
}

.calendar-title .image {
  height: 30rpx;
  font-size: 20rpx;
  color: white;
}

/* 星期 */
.calendar-week {
  display: flex;
  text-align: center;
  padding: 0rpx 10rpx;
  color: rgba(255,255,255,0.4);
  font-size: 28rpx;
}

.calendar-week .week {
  flex: 1;
}

/* 日期 */
.calendar-container {
  display: flex;
  flex-wrap: wrap;
  padding: 0rpx 10rpx;
  padding-top: 4rpx;
  font-size: 30rpx;
}

/* 内容 */
.calendar-container .grid {
  /* 总长度 1/7 */
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 14.2857142857143%;
  /* 有边框所有 35 + 2 */
  height: 74rpx;
  font-size: 24rpx;
}

.gray {
  color: #ccc;
}

/* 点击 */
.select {
  display: flex;
  flex-direction: column;
  background: var(--themeBac);
  align-items: center;
justify-content: center;
  color: #fff;
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
}
.normal{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 70rpx;
  height: 70rpx;
}
