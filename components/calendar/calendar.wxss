/* components/calendar/calendar.wxss */
.calendar {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  background: var(--commonBlack);
}

/* 标题 */
.calendar-title {
  text-align: left;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 20rpx 20rpx;
}

.calendar-title .title {
  width: 400rpx;
  text-align: center;
}

.calendar-title .image {
  height: 30rpx;
  font-size: 20rpx;
  color: gray;
}

/* 星期 */
.calendar-week {
  display: flex;
  text-align: center;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 20rpx 10rpx;
  font-size: 24rpx;
}

.calendar-week .week {
  flex: 1;
}

/* 日期 */
.calendar-container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
}

/* 内容 */
.calendar-container .grid {
  /* 总长度 1/7 */
  width: 14.2857142857143%;
  /* 有边框所有 35 + 2 */
  height: 74rpx;
  font-size: 24rpx;
}

.gray {
  color: #ccc;
}

/* 点击 */
.calendar-container .grid .select {
  background: var(--themeBac);
  color: #fff;

  border: 2rpx solid transparent;
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
}
