/* pages/salaryDetail/salaryDetail.wxss */
page{
    background: var(--tintBac);
}
.act{
    width: 20rpx;
    height: 20rpx;
}
.out{
    width: 100vw;
    position: relative;
    display: flex;
    flex-direction: column;
}
.out1 {
    width: 100%;
    height: 418rpx;
    display: flex;
    flex-direction: column;
    background: var(--themeBac);
}
.title1 {
    padding: 0 var(--titlePadding);
    margin-top: 30rpx;
    font-size: 60rpx;
    font-weight: bold;
    color: var(--white);
}

.title2 {
    padding: 0 var(--titlePadding);
    margin-top: 0rpx;
    font-size: 24rpx;
    color: var(--white);
}
.cells{
    width: calc(100vw - 2*var(--titlePadding));
    display: flex;
    flex-direction: column;
    position: absolute;
    margin-top: 338rpx;
    margin-bottom: 40rpx;
    margin-left: var(--titlePadding);
    margin-right: var(--titlePadding);
    padding-bottom: 50rpx;
    background: var(--white);
    border-radius: 12rpx;
    box-sizing: border-box;
}
.cell{
    display: flex;
    flex-direction: column;
}
.cell:not(:last-child) {

}
.ext{
    display: flex;
    padding:30rpx 22rpx;
    align-items: center;
    border-bottom: var(--splitColor) solid 1rpx;
}
.ext-key{
    display: flex;
    flex-grow: 1;
    font-size: 28rpx;
    color: var(--commonHint);
}
.ext-value{
    font-size: 40rpx;
    font-weight: bold;
    color: var(--commonBlack);
}
.img{
    width: 30rpx;
    height: 30rpx;
    padding: 20rpx;
}
.remark{
    font-size: 28rpx;
    color: var(--commonHint);
    padding:30rpx 42rpx;
    align-items: center;
    border-bottom: var(--splitColor) solid 1rpx;
}