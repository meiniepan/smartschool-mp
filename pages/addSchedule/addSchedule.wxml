<!--pages/addSchedule/addSchedule.wxml-->
<view class="out">
    <view class="split-line"></view>
    <view class="item-remark" bindtap="">
        <view class="horizontal">
            <view class="key text bold">日程名称</view>
            <view class="require bold">*</view>
        </view>
        <input placeholder="请填写日程名称" maxlength="20" bindinput="doInput" data-type="title" value="{{requestBody.title}}"/>
    </view>
    <dateTimePicker value="{{requestBody.scheduletime}}"
            data-type="indexClass" bindchange="bindTimeS">
        <view class="item">
            <view class="key text bold">开始时间</view>
            <view class="require bold">*</view>
            <view class="value hint">{{requestBody.scheduletime}}</view>
            <image class="next" src="/assets/images/ic_next.png" style="height: 28rpx" mode="widthFix"></image>
        </view>
    </dateTimePicker>
    <dateTimePicker value="{{requestBody.scheduleover}}"
            data-type="indexClass" bindchange="bindTimeE">
        <view class="item">
            <view class="key text bold">结束时间</view>
            <view class="require bold">*</view>
            <view class="value hint">{{requestBody.scheduleover}}</view>
            <image class="next" src="/assets/images/ic_next.png" style="height: 28rpx" mode="widthFix"></image>
        </view>
    </dateTimePicker>
    <view class="item" wx:if="{{showChooseStudent}}" bindtap="doChooseStudent">
        <view class="key text bold">日程同步给</view>
        <view class="require bold">*</view>
        <view class="value hint singleLine">{{requestBody.stuStr}}</view>
        <image class="next" src="/assets/images/ic_next.png" style="height: 28rpx" mode="widthFix"></image>
    </view>

    <view class="item-remark" bindtap="">
        <view class="horizontal">
            <view class="key text bold">日程详情</view>
            <view class="require bold">*</view>
        </view>
        <input placeholder="请填写日程的具体信息" maxlength="20" bindinput="doInput" data-type="remark" value="{{requestBody.remark}}"/>
    </view>
    <view class="bottom">
        <view class="confirm" bindtap="doConfirm">提交</view>
    </view>
</view>
