<!--pages/mine/mine.wxml-->
<view class="out">

    <image class="img" src="{{img}}" mode="aspectFill" binderror="binderror"></image>
    <text class="text">{{name}}</text>
    <myItem icon="/assets/images/ic_ziliao.png" text="我的资料" bindtap="doClick" data-url='/packageA/pages/mine_info/mine_info'>
        </myItem>
    <block wx:if="{{false}}">
    <myItem icon="/assets/images/ic_anquan.png" text="账号与安全" bindtap="doClick" data-url='/packageA/pages/security/security'>
        </myItem>
    </block>
    <block wx:if="{{llItem3}}">
        <myItem icon="/assets/images/ic_xuanzehaizi.png" text="选择孩子" bindtap="doClick"
            data-url='/packageA/pages/choose_child/choose_child' />
    </block>
    <block wx:if="{{llItem4}}">
        <myItem icon="/assets/images/ic_yaoqing.png" text="我的邀请码" bindtap="doClick" data-url='/packageA/pages/my_code/my_code' />
    </block>
    <myItem icon="/assets/images/ic_qiehuanshenfen.png" text="切换身份" bindtap="doSwitch" />
    <block wx:if="{{llItem6}}">
        <myItem icon="/assets/images/ic_bangding.png" text="绑定家长" bindtap="doClick"
            data-url='/packageA/pages/bind_parent/bind_parent' />
    </block>
    <myItem icon="/assets/images/ic_setting.png" text="系统设置" bindtap="doClick" data-url='/packageA/pages/setting/setting' />
</view>
