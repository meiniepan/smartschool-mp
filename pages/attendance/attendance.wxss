/* pages/attendance/attendance.wxss */
.head-area {
    width: 100%;
    position: fixed;
    background: var(--white);
    height: 140rpx;
    top: 0;
    z-index: 99;
}

.head-line0 {
    display: flex;
    align-items: center;
    width: 100%;
    height: 70rpx;
    padding: 20rpx var(--titlePadding);
    font-size: 24rpx;
    background: var(--tintBac);
    box-sizing: border-box;
    border-bottom: var(--splitColor) solid 1rpx;
}

.head-line {
    display: flex;
    align-items: center;
    width: 100%;
    height: 70rpx;
    padding: 20rpx var(--titlePadding);
    background: var(--tintBac);
    box-sizing: border-box;
}

.head-block {
    display: flex;
    align-items: center;
}
.cells-master{
    margin-top: 140rpx;
}
.title-area {
    display: flex;
    margin-left: var(--titlePadding);
    padding-right: var(--titlePadding);
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    background: var(--white);
    border-bottom: var(--splitColor) solid 1rpx;
    box-sizing: border-box;
}
.stu-code{
    min-width:100rpx ;
}
.stu-name{
    width: 140rpx;
    margin-left: 32rpx;
}
.stu-att-tag{
    display: flex;
margin-left: 20rpx;
    align-items: center;
}
.tag{
    width: 40rpx;
    height: 40rpx;
    background: var(--grayEE);
    border-radius: 50%;
    margin-right: 4rpx;
    text-align: center;
    font-size: 28rpx;
    color: var(--commonHint);
}
.tea-course-cells{
    background: var(--tintBac);
    width: 100%;
}
.tea-course-area{
    position: relative;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 20rpx;
    margin-left: var(--titlePadding);
    margin-right: var(--titlePadding);
    padding: 20rpx;
    box-sizing:border-box;
background: var(--white);
    box-shadow:0rpx 2rpx 5rpx 5rpx var(--splitColor);
}
.tea-course-name{
    font-size: 36rpx;
}
.tea-course-time{
    font-size: 28rpx;
    color: var(--commonHint);
}
.tea-course-image{
    width: 40rpx;
    height: 40rpx;
position: absolute;
    right: 20rpx;

}
