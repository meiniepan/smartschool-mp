<!--pages/login_t/login_t.wxml-->
<view class="header-background"></view>

<view class="logo-area">
    <image class="img-logo" mode="widthFix" src="../../assets/images/ic_logo_page.png" mode=""></image>
</view>

<view class="login-panel">
    <view class="account-area">
        <input placeholder="请输入账户名" style="width: 90%;" bindinput="doInput" data-type="phone" value="{{phone}}"></input>
    </view>

    <view class="password-area">
        <input placeholder="请输入验证码" style="width: 80%;" password="{{!isShowPassword}}" bindinput="doInput" data-type="vcode"
               value="{{vcode}}"></input>
        <image hidden="{{!isShowPasswordClearBtnAndShowPasswordBtn}}"
               src="../../assets/images/{{isShowPassword ? 'ic_eye' : 'ic_eye_no'}}.png"
               style="width: 50rpx; height: 50rpx; margin-left: 10rpx;" bindtap="showPassword"></image>
    </view>
</view>

<view wx:if="{{isAllowLogin === false}}">
    <view class="btn-login btn-disable-login">登录</view>
</view>
<view wx:else>
    <view class="btn-login btn-enable-login" bindtap="login">登录</view>
</view>
