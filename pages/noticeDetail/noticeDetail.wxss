/* pages/noticeDetail/noticeDetail.wxss */
.root{
    display: flex;
    flex-direction: column;

}
.out {
    display: flex;
    flex-direction: column;
    padding: 40rpx var(--titlePadding) 300rpx var(--titlePadding);
    border-top: var(--tintBac) solid 20rpx;
}

.name-area {
    display: flex;
    justify-content: space-between;
    font-size: 32rpx;
    align-items: center;
}

.name {
    color: var(--themeColor);
}

.number {
    color: var(--commonHint);
}

.date-area {
    display: flex;
    margin-top: 20rpx;
    align-items: center;
}

.date {
    flex-grow: 1;
}

.text1 {
    color: var(--commonHint);
}

.title {
    font-size: 40rpx;
    font-weight: bold;
    margin-top: 40rpx;
}

.remark {
    margin-top: 28rpx;
}
.img-cells{
    margin-top: 20rpx;
}
.img-cell{
    margin-bottom: 10rpx;
}
.img-cell image{
    height: 436rpx;
    border-radius: 32rpx;
}
.btn-read{
    margin-top: 160rpx;
}
.has-read{
    margin-top: 100rpx;
    font-size: 60rpx;
    color: var(--themeColor);
    text-align: center;
    font-weight: bold;
}
/*scroll 父控件width: 100%;不然后导致滑动不到头*/
.bottom0{
    width: 100%;
    position: fixed;
    display: flex;
    bottom: 0rpx;
    flex-direction: column;
    padding: 14rpx var(--titlePadding) 40rpx var(--titlePadding);
    background: var(--grayF6);
    box-sizing: border-box;
}
.text2{
    font-size: 24rpx;
}
.scroll{
    margin-top: 20rpx;
    overflow: scroll;
}
.file-cells{
display: flex;
    white-space: nowrap;
}
.file-cell{
    display: flex;
    flex-direction: column;
    background: var(--white);
    padding: 32rpx 20rpx;
    width: 200rpx;
    height: 200rpx;
    justify-content: center;
    border-radius: 30rpx;
    align-items: center;
    box-sizing: border-box;
}
.file-cell:not(:last-child){
    margin-right: 10rpx;
}
.text3{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    margin-top: 14rpx;
    font-size: 24rpx;
    -webkit-line-clamp: 1;
    text-overflow: ellipsis;
    overflow: hidden;
}