<!--pages/circular/circular.wxml-->
<view class="out">
	<navigation title="通知">
		<view class="out1" wx:if="{{false}}">
		<image class="act" src="../../assets/images/ic_notice.png" mode="aspectFill" bindtap="doAct"></image>
		<view class="red" hidden="{{noUnread}}"></view>
		</view>
	</navigation>
	<image class="banner" src="../../assets/images/bac_banner1.png" mode="widthFix"></image>
<emptyView wx:if="{{isEmpty}}" />
<view class="cells" wx:else>
	<view class="cell" wx:for="{{mData}}" wx:key="index" data-url="{{item.id}}" bindtap="doDetail">
		<view class="titles">
			<image class="ivAction" src="../../assets/images/{{item.icon}}.png" mode="widthFix"></image>
			<view class="title">{{item.typeStr}}</view>
			<view class="date">{{item.noticetime}}</view>
		</view>
		<text class="{{item.isRead?'tag2':'tag1'}}">{{item.title}}</text>
	</view>
</view>
</view>