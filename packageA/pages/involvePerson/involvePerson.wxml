<!--pages/involvePerson/involvePerson.wxml-->
<view class="out">

    <view class="split"></view>
    <view class="cells">
        <view class="cell" wx:for="{{mDataInvolve}}" wx:key="index" data-position="{{index}}">
            <view class="title-area">
                <view class="title">{{item.departmentsname}}</view>
                <image class="check" bindtap="doCheckAll" mode="heightFix" data-position="{{index}}"
                       src="../../assets/images/{{item.checked?'ic_check_timetable_true':'ic_check_timetable_false'}}.png"></image>
                <view class="text">全选</view>
            </view>
            <view class="cells0">
                <view class="cell0" wx:for="{{item.data}}" wx:for-index="idx" wx:for-item="bean" wx:key="idx"
                      data-position0="{{index}}" data-position="{{idx}}"  bindtap="doPerson">
                    <view class="{{bean.checked?'label-c':'label'}}">{{bean.label}}</view>
                    <view class="name singleLine">{{bean.realname}}</view>
                </view>
            </view>
        </view>
    </view>
    <view style="display:flex;width: 100%;height: 84rpx">_</view>
    <view class="bottom">
        <view class="confirm" bindtap="doConfirm">确定</view>
    </view>
</view>
