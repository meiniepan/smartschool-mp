/* pages/taskDetail/taskDetail.wxss */
.item {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 30rpx var(--titlePadding);
    border-bottom: 1rpx solid var(--splitColor);
}

.key {
    display: flex;
    white-space: nowrap;
}

.item-remark {
    display: flex;
    flex-direction: column;
    padding: 30rpx var(--titlePadding);
    border-bottom: 1rpx solid var(--splitColor);
}

.value {
    flex-grow: 1;
    text-align: right;
    margin-left: 20rpx;
    margin-right: 10rpx;
}

.scroll {
    margin-top: 20rpx;
    overflow: scroll;
}

.file-cells {
    display: flex;
    white-space: nowrap;
}

.file-cell {
    display: flex;
    flex-direction: column;
    background: var(--tintBac);
    padding: 32rpx 20rpx;
    width: 200rpx;
    height: 200rpx;
    justify-content: center;
    border-radius: 30rpx;
    align-items: center;
    box-sizing: border-box;
}

.file-cell:not(:last-child) {
    margin-right: 10rpx;
}

.text3 {
    width: 100%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    margin-top: 14rpx;
    font-size: 24rpx;
    -webkit-line-clamp: 1;
    text-overflow: ellipsis;
    overflow: hidden;
}

.item-log {
    display: flex;
    flex-direction: row-reverse;
    padding: 30rpx var(--titlePadding);
}

.textBtn {
    display: flex;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
    background: var(--themeBac);
    color: var(--white);
}
.log-area{
    display: flex;
    flex-direction: column;
    background: var(--tintBac);

}
.log-cells{
    display: flex;
    flex-direction: column;

}
.log-cell{
    display: flex;
    flex-direction: column;
    padding: 30rpx var(--titlePadding);
    background: var(--white);
    border-bottom: 20rpx solid var(--tintBac);
}