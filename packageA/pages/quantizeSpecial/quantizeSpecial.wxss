/* pages/quantizeSpecial/quantizeSpecial.wxss */
.require{
    color: var(--commonRed2);
}
.item{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 30rpx var(--titlePadding);
    border-bottom: 1rpx solid var(--splitColor);
}
.key{
    display: flex;
    white-space: nowrap;
}
.label{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50rpx;
    height: 50rpx;
    background: white;
    border-radius: 50%;
    border: 1rpx solid var(--themeColor);
    color: var(--themeColor);
    box-sizing: border-box;
    margin-left: 40rpx;
}
.label-checked{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50rpx;
    height: 50rpx;
    background: var(--themeBac);
    border-radius: 50%;
    color: white;
    box-sizing: border-box;
    margin-left: 40rpx;
}
.item-remark{
    display: flex;
    flex-direction: column;
    padding: 30rpx var(--titlePadding);
    border-bottom: 1rpx solid var(--splitColor);
}
.value{
    flex-grow: 1;
    text-align: right;
    margin-left: 20rpx;
    margin-right: 10rpx;
}
.value1{
    margin-right: 10rpx;
}
.value0{
    display: flex;
    align-items: center;
    flex-direction: row;
}
.next{
    width: 20rpx;
    flex-shrink: 0 ;
}
.layout0{
    display: flex;
    width: 100%;
    padding-top: 80rpx;
    padding-bottom: 40rpx;
    flex-direction: column;
    box-sizing:border-box;
    background: var(--white);
}
.cells{
    display: flex;
    flex-direction: row;
    padding-left: 24rpx;
    width: 100%;
    flex-wrap: wrap;
    box-sizing: border-box;
}
.cell{
    display: flex;
    position: relative;
    width: calc((100% - 24rpx * 3) / 3);
    height: 72rpx;
    margin-right: 24rpx;
    margin-bottom: 24rpx;
    align-items: center;
    justify-content: center;
    background: var(--grayF6);
    box-sizing: border-box;
    color: var(--commonBlack);
    border-radius: 8rpx;
}
.image{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
}
.layout1{
    display: flex;
    flex-direction: row;
    padding-top: 16rpx;
    padding-left: 24rpx;
    padding-right: 24rpx;
    box-sizing:border-box;
}
.btn1{
    display: flex;
    flex-grow: 1;
    height: 100rpx;
    align-items: center;
    justify-content: center;
    background: var(--white);
    color: var(--themeColor);
    border: 1rpx solid var(--themeColor);
    border-radius: 8rpx;
}
.btn2{
    display: flex;
    flex-grow: 1;
    margin-left: 24rpx;
    height: 100rpx;
    align-items: center;
    justify-content: center;
    background: var(--themeBac);
    color: var(--white);
    border: 1rpx solid var(--white);
    border-radius: 8rpx;
}
.bottom{
    position: fixed;
    z-index: 1;
    width: 100%;
    bottom: 0;
    display: flex;
    flex-direction: row-reverse;
    height: 84rpx;
    background: var(--grayF6);
}
.confirm{
    display: flex;
    width: 172rpx;
    height: 100%;
    background: var(--themeBac);
    color: var(--white);
    align-items: center;
    justify-content: center;
}