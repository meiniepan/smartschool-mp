<!--packageA/pages/archives/archives.wxml-->
<view class="out0">
    <image class="bac" src="{{bac}}" mode="aspectFill"></image>
    <view class="out">
        <navigation title="{{title}}" titleColor="#ffffff" bgColor="transparent">
            <image class="act" src="../../assets/images/icon_back_white_a.png" mode="widthFix"
                   bindtap="doFinish"></image>
        </navigation>
        <view class="out2">
            <view class="tri"></view>
            <view class="img-area">
            <image class="img" src="{{img}}" mode="aspectFill" binderror="binderror" bindtap="chooseAvatar"></image>
                <text class="text2">{{name}}</text>
            </view>
            <view class="info-area">
                <view class="info-line">
                    <text>出生日期</text>
                    <text class="text">{{mData.birthday}}</text>
                </view>
                <view class="info-line" style="margin-top: 40rpx">
                    <text>最高学历</text>
                    <text class="text">{{mData.highest_education_str}}</text>
                </view>
                <view class="info-line" style="margin-top: 40rpx">
                    <text>学科</text>
                    <text class="text">{{mData.speciality}}</text>
                </view>
                <view class="info-line" style="margin-top: 40rpx">
                    <text>职称</text>
                    <text class="text">{{mData.professional}}</text>
                </view>
                <view class="info-line" style="margin-top: 40rpx">
                    <text>教龄</text>
                    <text class="text">{{mData.teach_year}}</text>
                </view>
                <view class="info-line" style="margin-top: 40rpx">
                    <text>骨干级别</text>
                    <text class="text">{{mData.backbone}}</text>
                </view>
            </view>
        </view>
    </view>
</view>