<view class="out">
    <scroll requesting="{{mData.requesting}}" end="{{mData.end}}" empty-show="{{mData.emptyShow}}"
            list-count="{{mData.listData.length}}" top-size="0" bottom-size="{{0}}" bind:refresh="refresh"
            style="padding-top: 0rpx">
        <view class="cells">
            <view class="cell" wx:for="{{mData.listData}}" wx:key="index" bindtap="articleDetail">
                <view class="titles">
                    <view class="title-name">会议室名称</view>
                    <view class="title">{{item.classroom.classroomname}}</view>
                </view>
                <view class="titles">
                    <view class="title-name">预约时间</view>
                    <view class="title">{{item.timeStr}}</view>
                </view>

                <view class="titles">
                    <view class="title-name">当前状态</view>
                    <view class="title">{{item.statusStr}}</view>
                </view>
                <view class="titles">
                    <view class="title-name">会议名称</view>
                    <view class="title">{{item.remark}}</view>
                </view>
                <view class="titles">
                    <view class="title-name">会议室地点</view>
                    <view class="title">{{item.classroom.addr}}</view>
                </view>
                <view wx:if="{{item.status=='0'}}" data-id="{{item.id}}" bindtap="doAction" class="action">取消预约</view>
            </view>
        </view>
    </scroll>
</view>