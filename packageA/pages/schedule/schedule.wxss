/* pages/schedule/schedule.wxss */
page {
    background: var(--tintBac);
}

.out {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.top {
    background: var(--commonBlack);
    display: flex;
    flex-direction: column;
}

.list-title {
    display: flex;
    flex-direction: column;
    background: var(--tintBac);
    border-top-left-radius: 80rpx;
    border-top-right-radius: 80rpx;
    padding-top: 80rpx;
    padding-bottom: 20rpx;
    padding-left: var(--titlePadding);
    padding-right: var(--titlePadding);
}

.list{
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    box-sizing: border-box;
}
.cells {
    display: flex;
    flex-direction: column;
    padding-left: var(--titlePadding);
    padding-right: var(--titlePadding);
    overflow: hidden;
    box-sizing: border-box;
}

.cell {
    margin-bottom: 20rpx;
    padding: 40rpx 24rpx;
    background: var(--white);
    border-radius: 40rpx;
}

.title-area {
    display: flex;
    align-items: center;
}

.share {
    width: 12rpx;
    height: 42rpx;
    margin-right: 10rpx;
    border-radius: 6rpx;
}

.title {
    font-size: 30rpx;
    font-weight: bold;
    display: -webkit-box;
    flex-grow: 1;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    text-overflow: ellipsis;
    overflow: hidden;
}

.date {
    max-width: 200rpx;
}

.remark {
    margin-top: 20rpx;
}
.addBtn{
    position: fixed;
    bottom: 128rpx;
    right: var(--titlePadding);
    width: 136rpx;
    height: 136rpx;
}