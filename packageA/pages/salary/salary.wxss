/* pages/salary/salary.wxss */
page{
  background: var(--tintBac);
}
.out1 {
  display: flex;
  flex-direction: column;
  padding: 0 var(--titlePadding);
}

.title {
  margin-top: 40rpx;
  font-size: 72rpx;
  font-weight: bold;
}

.title2 {
  margin-top: 24rpx;
  font-size: 32rpx;
}

.phone {
  margin-top: 120rpx;
  padding-bottom: 28rpx;
  border-bottom: var(--splitColor) solid 1rpx;
}

.ovcode {
  display: flex;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: var(--splitColor) solid 1rpx;
}

.vcode {
  font-size: 32rpx;
}

.send {
  color: var(--themeColor);
}

.confirm {
  position: absolute;
  width: calc(100vw - 2*var(--titlePadding));
  bottom: 188rpx;
}

.cells {
  background: var(--tintBac);
  padding-top: 0rpx;
}

.cell {display: flex;
  flex-direction: column;}

.dataTitles {
  display: flex;
  padding: 24rpx var(--titlePadding);
  align-items: center;
}
.background{
  background: var(--white);
}
.fresh {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  background: var(--themeColor);
  margin-right: 10rpx;
}

.dataTitle {
  display: flex;
  flex-grow: 1;
  font-size: 32rpx;
  font-weight: bold;
}

.date {
  margin-left: 10rpx;
  white-space: nowrap;
  font-size: 28rpx;
}
