<!--pages/salary/salary.wxml-->
<view class="out">
    <view wx:if="{{!hiddenPage2}}">
        <scroll requesting="{{mData.requesting}}" end="{{mData.end}}" empty-show="{{mData.emptyShow}}"
                list-count="{{mData.listData.length}}" top-size="0" bottom-size="{{120}}"
                bind:refresh="refresh"
                bind:more="more"
                style="padding-top: 0rpx">
            <view class="cells">
                <view class="cell" wx:for="{{mData.listData}}" wx:key="index" data-url="{{item.id}}" data-read="{{item.read}}"
                      bindtap="salaryDetail">
                    <view class="{{index%2==0?'dataTitles':'dataTitles background'}}">
                    <view class="fresh" hidden="{{item.read=='1'}}"></view>
                    <view class="dataTitle">{{item.title}}</view>
                    <view class="date">{{item.createtime}}</view>
                </view>
            </view>
            </view>
        </scroll>
    </view>

    <view class="out1" wx:if="{{!hiddenPage1}}">
        <view class="title">工资条为私人信息</view>
        <view class="title2">请先验证您的账号信息</view>
        <view class="phone">{{phone}}</view>
        <view class="ovcode">
            <input type="number" class="vcode" placeholder="输入验证码" data-type="vcode" bindinput="doInput"></input>
            <text class="send" bindtap="doSend">{{vcodeStr}}</text>
        </view>
        <commonButton class="confirm" bindtap="doConfirm"></commonButton>
    </view>

</view>