<!--pages/login_t/login_t.wxml-->
<view class="out">
    <view class="title1">登录</view>
    <view class="title2">
    <view >还没有账号？ 快来</view>
    <view class="regist"bindtap="doRegist">注册</view>
    <view >学生账号吧！</view>
</view>
    <view class="phone-area">
        <input type="number" placeholder="输入手机号" bindinput="doInput" data-type="phone" value="{{phone}}"></input>
    </view>
<block wx:if="{{!isPwd}}">
    <view class="vcode-area">
        <input type="number" placeholder="输入验证码" bindinput="doInput" data-type="vcode" value="{{vcode}}"></input>
        <text class="vcode" bindtap="doSend">{{vcodeStr}}</text>
    </view>
</block>
<block wx:else>
    <view class="vcode-area">
        <input placeholder="输入密码" bindinput="doInput" password="{{!isShowPassword}}" data-type="pwd"></input>
        <image class="showPwd" src="../../assets/images/{{isShowPassword ? 'ic_eye' : 'ic_eye_no'}}.png"
            bindtap="showPassword"></image>
    </view>
</block>
    <view class="change" bindtap="doChange">{{changeStr}}</view>

    <commonButton class="btn-login" bindtap="login" text="登录" />
    <view class="protocol-area">
        <text>我已阅读并同意</text>
        <text class="protocol" bindtap="doProtocol">《用户协议及隐私政策》</text>
    </view>
    <commonButton class="btn-switch" mType="2" bindtap="doSwitch" text="切换身份" style="margin-top:20rpx;margin-bottom:20rpx;"/>
</view>
