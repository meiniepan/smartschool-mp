/* pages/login/login.wxss */

.out {
    display: flex;
    flex-direction: column;
    padding: 0 var(--titlePadding);
    box-sizing: border-box;
}

.title1 {
    font-size: 72rpx;
    font-weight: bold;
    margin-top: 120rpx;
}

.title2 {
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 24rpx;
}

.phone-area {
    margin-top: 160rpx;
    padding: 24rpx 0rpx;
    border-bottom: 1rpx solid var(--splitColor);
}

.vcode-area {
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
    padding: 24rpx 0rpx;
    border-bottom: 1rpx solid var(--splitColor);
}

.vcode {
    color: var(--themeColor);
}

.btn-login {
    margin-top: 200rpx;
}

.protocol-area {
    margin-top: 20rpx;
    margin-left: auto;
    margin-right: auto;
}

.protocol {
    color: var(--themeColor);
}

