/* pages/repair/repair.wxss */
page{
    background: var(--tintBac);
}
.tabs {
    border-top: var(--splitColor) 1rpx solid;
    border-bottom: var(--splitColor) 1rpx solid;
    padding: 24rpx var(--titlePadding);
    display: flex;
    align-content: space-between;
    position: fixed;
    width: 100%;
    box-sizing: border-box;
    background: var(--white);
    z-index: 9;
}

.tab-self{
    display: flex;
    align-items: center;
    justify-content: center;
    width: calc(100% - 2*var(--titlePadding) - 34rpx);
    height: 88rpx;
    background: var(--themeColor);
    border-radius: 44rpx;
    color: var(--white);
}
.tab-share{
    display: flex;
    align-items: center;
    justify-content: center;
    width: calc(100% - 2*var(--titlePadding) - 34rpx);
    height: 88rpx;
    background: var(--white);
    border-radius: 44rpx;
    border: var(--themeColor) 1rpx solid;
    color: var(--themeColor);
    box-sizing: border-box;
}
.cells {
    padding-top: 20rpx;
}

.cell {
    display: flex;
    flex-direction: column;
    background-color: white;
    padding: 40rpx var(--titlePadding);
    margin-bottom: 20rpx;
}

.titles {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.title-name {
    font-size: 30rpx;
    font-weight: bold;
    min-width: 150rpx;
}

.title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    color: var(--commonHint);
    -webkit-line-clamp: 1;
    text-overflow: ellipsis;
    overflow: hidden;
}
.under-line {
    border-bottom: var(--themeColor) solid 1rpx;
}

.remark {
    color: var(--commonHint);
}

.cells-image {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    margin-bottom: 20rpx;
}

.image {
    width: 200rpx;
    height: 200rpx;
    margin-top: 14rpx;
    border-radius: 12rpx;
}
.addBtn{
    position: fixed;
    bottom: 128rpx;
    right: var(--titlePadding);
    width: 136rpx;
    height: 136rpx;
}
.bottom{
    display: flex;
    margin-top: 40rpx;
    justify-content: space-between;
}
.action1{
    display: flex;
    align-items: center;
    justify-content: center;
    width: calc(100% - 2*var(--titlePadding) - 14rpx);
    flex-grow: 1;
    height: 88rpx;
    margin-left: 14rpx;
    background: var(--themeColor);
    border-radius: 44rpx;
    color: var(--white);
}
.action0{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
    width: calc(100% - 2*var(--titlePadding) - 14rpx);
    height: 88rpx;
    background: var(--white);
    border-radius: 44rpx;
    border: var(--themeColor) 1rpx solid;
    color: var(--themeColor);
    box-sizing: border-box;
}
.layout0{
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 40rpx var(--titlePadding);
    background: var(--white);
}
.bRemark{
    font-weight: bold;
    font-size: 36rpx;
}
.bInput{
    padding: 20rpx;
    margin-top: 24rpx;
    height: 240rpx;
    background: var(--tintBac);
    border-radius: 20rpx;
}
.bAction{
    display: flex;
    align-items: center;
    margin-top: 100rpx;
    justify-content: center;
    flex-grow: 1;
    height: 88rpx;
    background: var(--themeColor);
    border-radius: 44rpx;
    color: var(--white);
}
.cells-shift{
    display: flex;
    flex-wrap: wrap;
    padding-left: 20rpx;
    padding-top: 20rpx;
    box-sizing: border-box;
}
.cell-shift{

}
.shift0{
    display: flex;
    align-items: center;
    justify-content: center;
    width: calc((100% - 40rpx) / 2);
    height: 88rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
    background: var(--themeColor);
    border-radius: 44rpx;
    color: var(--white);
}
.shift1{
    display: flex;
    align-items: center;
    justify-content: center;
    width: calc((100% - 40rpx) / 2);
    height: 88rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
    background: var(--white);
    border-radius: 44rpx;
    border: var(--themeColor) 1rpx solid;
    color: var(--themeColor);
    box-sizing: border-box;
}